<h1>Listing invitations</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= gravatar_for(invitation.user) %> <br /> <%= link_to invitation.user.first_name + ' ' + invitation.user.last_name, invitation.user %></td>
        <td><%= link_to invitation.event.title, invitation.event %></td>
        <td><%= invitation.status %></td>
        <td><%= link_to 'Show', invitation %></td>
        <td><%= link_to 'Edit', edit_invitation_path(invitation) %></td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invitation', new_invitation_path %>

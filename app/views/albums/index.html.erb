<h1>Listing albums</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= link_to album.user.first_name + ' ' + album.user.last_name, album.user %></td>
        <td><%= link_to album.event.title, album.event %></td>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Listing images</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Album</th>
      <th>Image</th>
      <th>Title</th>
      <th>Caption</th>
      <th>Is profile photo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.user.first_name + ' ' + image.user.last_name %></td>
        <td><%= link_to image.event.title, image.event %></td>
        <td><%= link_to image.album.name, image.album %></td>
        <td><%= image_tag image.image_file.url(:thumb) %></td>
        <td><%= image.title %></td>
        <td><%= image.caption %></td>
        <td><%= image.is_profile_photo %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


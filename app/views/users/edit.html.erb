<h1>Editing profile</h1>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
    <%= f.hidden_field :password, value: '123456' %>
    <%= f.hidden_field :password_confirmation, value: '123456' %>
  </div><div class="field">
    <%= f.label :membership_type %><br>
    <%= f.select :membership_type, options_for_select(%w[Fan Artist Videographer Photographer Organiser]) %>
  </div><div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div><div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div><div class="field">
    <%= f.label :facebook_id %><br>
    <%= f.text_field :facebook_id %>
  </div><div class="actions">
    <%= f.submit "Save", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

